<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="name"
            type="String" />

        <variable
            name="number"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="40dp"
            android:src="@mipmap/dlpu_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_xuejikapian"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/school_roll"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="学籍卡片"
                android:textColor="@color/account_text_grey" />

            <TextView
                android:id="@+id/tv_course_grade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/course_result"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:text="课程成绩"
                android:textColor="@color/account_text_grey" />

            <TextView
                android:id="@+id/tv_level_grade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/level_grade"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:text="等级成绩"
                android:textColor="@color/account_text_grey" />

            <TextView
                android:id="@+id/tv_course_table"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/course_table"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="课程表"
                android:textColor="@color/account_text_grey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_current_week"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/current_week"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:text="当前周次"
                android:textColor="@color/account_text_grey" />

            <TextView
                android:id="@+id/tv_exam_plan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/exam"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="考试安排"
                android:textColor="@color/account_text_grey" />

            <TextView
                android:id="@+id/tv_password_reset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/repair_passwd"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:text="密码修改"
                android:textColor="@color/account_text_grey" />

            <TextView
                android:id="@+id/tv_login_out"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/login_out"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="@color/account_text_grey" />

        </LinearLayout>

    </LinearLayout>
</layout>