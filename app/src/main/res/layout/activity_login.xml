<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/id_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="?attr/colorPrimary"
        android:layout_alignParentTop="true"
        android:elevation="10dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_xuehao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_view"
        android:layout_marginTop="35dp"
        android:gravity="center">

        <EditText
            android:id="@+id/et_name"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:drawablePadding="15dp"
            android:drawableStart="@mipmap/username32"
            android:hint="Name"
            android:maxLength="10"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>


    <RelativeLayout
        android:id="@+id/rl_password"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/til_xuehao"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <EditText
                android:id="@+id/et_password"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:hint="PassWord"
                android:drawableStart="@mipmap/passwd_new"
                android:drawablePadding="15dp"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/iv_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/hide" />
    </RelativeLayout>

    <Button
        android:id="@+id/Bt_Login"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_below="@id/rl_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="#7B1FA2"
        android:elevation="10dp"
        android:text="Login" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/login"
        android:layout_marginTop="70dp"
        android:elevation="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>