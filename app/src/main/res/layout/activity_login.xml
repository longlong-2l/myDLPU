<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="name"
            type="String" />

        <variable
            name="number"
            type="String" />

        <!--<variable-->
        <!--name="event"-->
        <!--type="com.surpassli.www.myapp.ui.LoginActivity.EventClickListener" />-->
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:src="@mipmap/dlpu_logo" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_xuehao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_logo"
            android:gravity="center">

            <EditText
                android:id="@+id/et_name"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:hint="Name"
                android:maxLength="10"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>


        <RelativeLayout
            android:id="@+id/rl_password"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/til_xuehao"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">


                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:hint="PassWord"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:maxLines="1" />

            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/iv_see"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/hide" />
        </RelativeLayout>

        <Button
            android:id="@+id/Bt_Login"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_below="@id/rl_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="#A52F2F"
            android:text="Login" />

    </RelativeLayout>
</layout>